@using HolidayForm.Web.Areas.Admin.Views.Users
@inject SignInManager<User> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<ul class="nav nav-pills nav-stacked">
    <li class="@ManageNavAdminPages.IndexNavClass(ViewContext)"><a asp-action="Index">Users</a></li>
    @if (hasExternalLogins)
    {
        <li class="@ManageNavAdminPages.ExternalLoginsNavClass(ViewContext)"><a asp-action="ExternalLogins">External logins</a></li>
    }
    <li class="@ManageNavAdminPages.CreateUserNavClass(ViewContext)"><a asp-action="Create">Create User</a></li>
    <li class="@ManageNavAdminPages.CreateDepartmentNavClass(ViewContext)"><a asp-action="CreateDepartment">Create Department</a></li>
</ul>


