@model EditUserProfileViewModel
@{
    ViewData["Title"] = "Edit Profile";
}

<h2>@ViewData["Title"] for user @Model.Username</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h4>Edit User account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Birthdate"></label>
                <input asp-for="Birthdate" class="form-control" />
                <span asp-validation-for="Birthdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender"></label>
                @Html.RadioButtonFor(g => g.Gender, true) Male
                @Html.RadioButtonFor(g => g.Gender, false) Female
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HireDate"></label>
                <input asp-for="HireDate" class="form-control" />
                <span asp-validation-for="HireDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salary"></label>
                <input type="number" asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status"></label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<Status>()" class="form-control"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Managers"></label>
                <input type="hidden" name="UserId" value="@Model.Id" />
                <select name="Managers" asp-items="Model.Managers" class="form-control"></select>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
            <div>
                <br />
                <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-default">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

