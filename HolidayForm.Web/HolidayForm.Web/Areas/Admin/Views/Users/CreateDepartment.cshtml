@model CreateDepartmentFormModel
@{
    ViewData["Title"] = "Create";
    ViewData.AddActiveAdminPage(ManageNavAdminPages.CreateDepartment);
}

<h2>Create</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <h4>Create a new Depatment.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title"></label>
                <select asp-for="Title" asp-items="Html.GetEnumSelectList<DepartmentEnums>()" class="form-control"></select>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


